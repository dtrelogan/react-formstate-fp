{
  "name": "react-formstate-fp",
  "version": "1.2.0",
  "description": "An API to build, query, update, and bind formstate in React. Develop forms DRYly in React.",
  "main": "./lib/index.js",
  "module": "./src/index.js",
  "files": [
    "/lib",
    "/src"
  ],
  "types": "./contract/api/index.d.ts",
  "scripts": {
    "build": "npx babel src --out-dir lib",
    "pretest": "npm run build",
    "localtest": "npx jest",
    "prelocaltest": "npm run build",
    "prepublishOnly": "npm run localtest"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": false
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "absoluteRuntime": false,
          "corejs": false,
          "helpers": true,
          "regenerator": false,
          "useESModules": false,
          "version": "^7.17.8"
        }
      ]
    ]
  },
  "keywords": [
    "react",
    "form",
    "forms",
    "async",
    "asynchronous",
    "validation",
    "formstate",
    "state"
  ],
  "author": "Daniel Trelogan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtrelogan/react-formstate-fp.git"
  },
  "bugs": {
    "url": "https://github.com/dtrelogan/react-formstate-fp/issues"
  },
  "homepage": "https://github.com/dtrelogan/react-formstate-fp#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@types/react": "^17.0.24",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.8"
  }
}
